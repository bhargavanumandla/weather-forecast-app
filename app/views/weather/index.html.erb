<h1>Weather Forecast</h1>

<%= form_with url: forecast_path, method: :get, local: true do |f| %>
  <div>
    <%= f.label :address, "Enter address, city or ZIP" %><br>
    <%= f.text_field :address, value: params[:address], placeholder: "1600 Amphitheatre Pkwy, CA" %>
  </div>
  <div>
    <%= f.submit "Get Forecast" %>
  </div>
<% end %>

<div id="loading">Fetching forecast, please wait...</div>
